{
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "paths": {
            "@/*": [
                "./src/renderer/*"
            ],
            "assets/*": [
                "./assets/*"
            ]
        }
    }
}
